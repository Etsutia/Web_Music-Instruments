@page
@model DoAnWeb.Pages.ThanhToanModel
@{
}
<!DOCTYPE html>
<html lang="vi" class="h-100">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Thanh Toán</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/bootstrapTT.min.css" type="text/css">
    <!-- Font awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>

<body>
    <main role="main">

        <div class="container mt-4">
            <form class="needs-validation" name="frmthanhtoan" action="/Home/CreatePaymentUrl" id="frmCreateOrder" method="post">
                <input type="hidden" name="kh_tendangnhap" value="dnpcuong">

                <div class="py-5 text-center">
                    <i class="fa fa-credit-card fa-4x" aria-hidden="true"></i>
                    <h2>Thanh toán</h2>
                    <p class="lead">Vui lòng kiểm tra thông tin Khách hàng, thông tin Giỏ hàng trước khi Đặt hàng.</p>
                </div>

                <div class="row">
                    <div class="col-md-4 order-md-2 mb-4">
                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-muted">Giỏ hàng</span>
                        </h4>
                        <ul class="list-group mb-3">

                            <li class="list-group-item d-flex justify-content-between lh-condensed">
                                <div>
                                    <h6 class="my-0">Sản phẩm</h6>
                                </div>
                                <span class="text-muted"></span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span>Tổng thành tiền</span>
                                <strong>13.160.000</strong>
                            </li>
                        </ul>


                        <div class="input-group">
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-secondary">Xác nhận</button>
                            </div>
                        </div>

                    </div>
                    <div class="col-md-8 order-md-1">
                        <h4 class="mb-3">Thông tin khách hàng</h4>
                        <div class="row">
                            <div class="col-md-12">
                                <label>Họ và Tên:</label>
                                <input type="text" class="form-control" value="Phan Thành Đạt" readonly="">
                            </div>
                            <div class="col-md-12">
                                <label>Tên sản phẩm:</label>
                                <input type="text" class="form-control" value="Đàn Guitar Acoustic Yamaha JR2" readonly="">
                            </div>
                            <div class="col-md-12">
                                <label>Số lượng:</label>
                                <input type="text" class="form-control" value="2" readonly="">
                            </div>
                            <div class="col-md-12">
                                <label>Giá tiền 1 sản phẩm:</label>
                                <input type="text" class="form-control" value="6.580.000" readonly="">
                            </div>

                            <div class="col-md-12">
                                <label>Tổng thanh toán:</label>
                                <input type="text" class="form-control" value="13.160.000" readonly="">
                            </div>
                        </div>

                        <h4 class="mb-3">Hình thức thanh toán</h4>

                        <div class="d-block my-3">
                            <div class="custom-control custom-radio">
                                <input id="httt-1" name="httt_ma" type="radio" class="custom-control-input" required=""
                                       value="1">
                                <label class="custom-control-label" for="httt-1">Tiền mặt</label>
                            </div>
                            <div class="custom-control custom-radio">
                                <input id="httt-2" name="httt_ma" type="radio" class="custom-control-input" required=""
                                       value="2">
                                <label class="custom-control-label" for="httt-2">Chuyển khoản</label>
                            </div>
                        </div>
                        <hr class="mb-4">
                        <button style="margin:10px;" class="btn btn-primary btn-lg btn-block" type="submit" name="btnDatHang">
                            Thanh Toán
                        </button>
                    </div>
                </div>
            </form>

        </div>

    </main>
</body>

</html>